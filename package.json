{
  "name": "kawa-api",
  "version": "1.0.0",
  "description": "this is the api for kawa",
  "main": "dist/index.js",
  "scripts": {
    "prebuild": "tslint -c tslint.json -p tsconfig.json --fix",
    "build": "tsc",
    "prestart": "npm run build",
    "start": "node .",
    "watch": "nodemon -e ts -w ./src -x yarn run dev",
    "dev": "node --inspect -r ts-node/register ./src/index.ts",
    "test": "NODE_ENV=testing nyc mocha --exit -r ts-node/register test/**/*.test.ts",
    "test:dev": "NODE_ENV=testing nodemon --watch . --ext ts --exec \"nyc mocha -r ts-node/register test/**/*.test.ts\"",
    "coverage": "nyc report --reporter=text-lcov | coveralls"
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "extension": [
      ".ts",
      ".tsx"
    ],
    "reporter": [
      "html"
    ]
  },
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "express": "^4.17.1",
    "mocha": "^6.2.1",
    "mongoose": "^5.7.5"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^0.1.3",
    "@types/chai": "^4.2.3",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.1",
    "@types/mocha": "^5.2.7",
    "@types/mongoose": "^5.5.20",
    "@types/node": "^12.7.12",
    "@types/sinon": "^7.5.0",
    "@types/sinon-mongoose": "^1.3.9",
    "@types/supertest": "^2.0.8",
    "chai": "^4.2.0",
    "coveralls": "^3.0.7",
    "mockgoose": "^8.0.3",
    "nodemon": "^1.19.3",
    "nyc": "^14.1.1",
    "sinon": "^7.5.0",
    "sinon-mongoose": "^2.3.0",
    "supertest": "^4.0.2",
    "ts-node": "^8.4.1",
    "tslint": "^5.20.0",
    "typescript": "^3.6.4"
  }
}
